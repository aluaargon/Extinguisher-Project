<div class="bug" id="{{ bug.id }}">
    <h3>{{ bug.description }}</h4>
        <div class="bug-footer">
            <p class="priority">{{ bug.priority.level }}</p>
            <div>
                {% if bug.status.id == 1 %}
                    <i class="fas fa-database fa-2x"></i>
                    <i class="fas fa-user-slash fa-2x"></i>
                {% elseif  bug.status.id == 2 %}
                    <i class="fas fa-user fa-2x"></i>
                    <i class="fas fa-wrench fa-2x"></i>
                    <i class="far fa-arrow-alt-circle-right fa-2x" id="move-right"></i>
                {% elseif  bug.status.id == 3 %}
                    <i class="far fa-arrow-alt-circle-left fa-2x"></i>
                    <i class="fas fa-user fa-2x"></i>
                    <i class="fas fa-search fa-2x"></i>
                    <i class="far fa-arrow-alt-circle-right fa-2x"></i>
                {% else %}
                    <i class="fas fa-check-circle fa-2x"></i>
                {% endif %}
            </div>
        </div>
</div>